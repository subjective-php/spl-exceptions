{
    "name": "subjective-php/spl-exceptions",
    "description": "Collection of standard exception classes",
    "keywords": ["exception", "spl"],
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.0"
    },
    "suggest": {
        "subjective-php/util-exceptions": "Offers utilty classes for working with exceptions."
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": { "SubjectivePHP\\Spl\\Exceptions\\": "src" }
    }
}
